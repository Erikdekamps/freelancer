{% if variables is not empty %}
  <!-- Header -->
  <header>
    <div class="container" id="maincontent" tabindex="-1">
      <div class="row">
        <div class="col-lg-12">
          {% if variables.title is not empty %}
            <img class="img-responsive" src="{{ variables.image }}" alt="">
          {% endif %}
          <div class="intro-text">
            {% if variables.title is not empty %}
              <h1 class="name">{{ variables.title }}</h1>
            {% endif %}
            <hr class="star-light">
            {% if variables.slogan is not empty %}
              <span class="skills">{{ variables.slogan }}</span>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- End Header -->
{% endif %}
